<div class="container py-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">All Our Flats</h1>
    <div class="d-flex align-items-center gap-3">
      <span class="text-secondary"><%= pluralize(@flats.count, "flat") %> available</span>
      <%= link_to "Add Flat", new_flat_path, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="card border-0 shadow-sm mb-4">
    <div class="card-body">
      <%= form_with url: flats_path, method: :get, local: true, class: "row g-2" do |f| %>
        <div class="col-12 col-md-9">
          <%= f.text_field :query, value: @query, placeholder: "Search by name or address", class: "form-control" %>
        </div>
        <div class="col-12 col-md-3 d-grid">
          <%= f.submit "Search", class: "btn btn-outline-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="row g-4">
    <% @flats.each do |flat| %>
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm border-0">
          <%= image_tag(flat.picture_url.presence || "https://images.unsplash.com/photo-1484154218962-a197022b5858?auto=format&fit=crop&w=1200&q=80", class: "card-img-top", alt: flat.name, style: "height: 220px; object-fit: cover;") %>
          <div class="card-body d-flex flex-column">
            <h5 class="card-title mb-1"><%= link_to flat.name, flat_path(flat), class: "text-decoration-none" %></h5>
            <p class="card-subtitle text-secondary mb-3"><%= flat.address %></p>

            <p class="card-text flex-grow-1"><%= truncate(flat.description, length: 120) %></p>

            <div class="d-flex gap-3 text-secondary small">
              <span><i class="fa-solid fa-user-group me-1"></i> <%= flat.number_of_guests %></span>
              <span><i class="fa-solid fa-euro-sign me-1"></i> <%= flat.price_per_night %></span>
            </div>

            <div class="mt-3">
              <%= link_to "More info", flat_path(flat), class: "btn btn-sm btn-outline-primary" %>
              <%= link_to "Edit flat", edit_flat_path(flat), class: "btn btn-sm btn-outline-secondary ms-1" %>
              <%= link_to "Remove", flat_path(flat), class: "btn btn-sm btn-outline-danger ms-1", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
