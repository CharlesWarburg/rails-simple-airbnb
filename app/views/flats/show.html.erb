<div class="container py-4">
  <%= image_tag(@flat.picture_url.presence || "https://images.unsplash.com/photo-1484154218962-a197022b5858?auto=format&fit=crop&w=1400&q=80", class: "img-fluid rounded mb-4 w-100", alt: @flat.name, style: "max-height: 420px; object-fit: cover;") %>
  <h1 class="mb-2"><%= @flat.name %></h1>
  <p class="text-secondary mb-4"><%= @flat.address %></p>

  <p><%= @flat.description %></p>

  <div class="d-flex gap-3 text-secondary mt-3">
    <span><i class="fa-solid fa-user-group me-1"></i> <%= @flat.number_of_guests %> guests</span>
    <span><i class="fa-solid fa-euro-sign me-1"></i> <%= @flat.price_per_night %> / night</span>
  </div>

  <div class="mt-4">
    <%= link_to "Back to flats", flats_path, class: "btn btn-outline-secondary" %>
    <%= link_to "Edit flat", edit_flat_path(@flat), class: "btn btn-primary ms-2" %>
    <%= link_to "Remove", flat_path(@flat), class: "btn btn-danger ms-2", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </div>
</div>
